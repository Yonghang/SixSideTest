<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <org.zhyh.sixside.sixsidelib.SixAngleViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/hrnew_video_font"
            app:itemSixColor="#ff0000" />
        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/hrnew_news_font"
            app:itemSixColor="#ff0000" />
        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/hrnew_picture_font"
            app:itemSixColor="#ff0000" />
        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/hrnew_work_font"
            app:itemSixColor="#ff0000" />
        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/hrnew_capture_font"
            app:itemSixColor="#ff0000" />
        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/hrnew_paper_font"
            app:itemSixColor="#ff0000" />
        <org.zhyh.sixside.sixsidelib.SixAngleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemImage="@drawable/ppt"
            app:itemSixColor="#ff0000" />
    </org.zhyh.sixside.sixsidelib.SixAngleViewGroup>
</RelativeLayout>
